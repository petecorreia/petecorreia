{
	"name": "petecorreia",
	"private": true,
	"description": "petecorreia",
	"version": "1.0.0",
	"author": "Pete Correia <pete@petecorreia.com>",
	"bugs": {
		"url": "https://github.com/petecorreia/petecorreia/issues"
	},
	"dependencies": {
		"babel-plugin-styled-components": "^1.10.6",
		"gatsby": "^2.13.1",
		"gatsby-plugin-feed": "^2.3.1",
		"gatsby-plugin-manifest": "^2.2.1",
		"gatsby-plugin-offline": "^2.2.0",
		"gatsby-plugin-react-helmet": "^3.1.0",
		"gatsby-plugin-sharp": "^2.2.2",
		"gatsby-plugin-styled-components": "^3.1.0",
		"gatsby-remark-autolink-headers": "^2.1.0",
		"gatsby-remark-copy-linked-files": "^2.1.0",
		"gatsby-remark-images": "^3.1.2",
		"gatsby-remark-prismjs": "^3.3.1",
		"gatsby-remark-responsive-iframe": "^2.2.1",
		"gatsby-remark-smartypants": "^2.1.0",
		"gatsby-source-filesystem": "^2.1.2",
		"gatsby-transformer-remark": "^2.5.0",
		"gatsby-transformer-sharp": "^2.2.1",
		"lodash": "^4.17.13",
		"polished": "^3.4.1",
		"prismjs": "^1.16.0",
		"react": "^16.8.6",
		"react-dom": "^16.8.6",
		"react-helmet": "^5.2.1",
		"rebass": "^3.1.1",
		"styled-components": "^4.3.2"
	},
	"devDependencies": {
		"babel-eslint": "^10.0.2",
		"eslint": "^6.0.1",
		"eslint-config-react-app": "^4.0.1",
		"eslint-plugin-flowtype": "^3.11.1",
		"eslint-plugin-import": "^2.18.0",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-react": "^7.14.2",
		"eslint-plugin-react-hooks": "^1.6.1",
		"gatsby-cli": "^2.7.7",
		"gh-pages": "^2.0.1",
		"prettier": "^1.18.2"
	},
	"homepage": "https://petecorreia.com",
	"license": "MIT",
	"scripts": {
		"dev": "gatsby develop",
		"lint": "./node_modules/.bin/eslint --ext .js,.jsx --ignore-pattern public .",
		"format": "prettier --trailing-comma es5 --no-semi --single-quote --write 'src/**/*.js' 'src/**/*.md'",
		"develop": "gatsby develop",
		"start": "npm run develop",
		"build": "rm -rf public && rm -rf .cache && gatsby build",
		"serve": "gatsby serve",
		"deploy": "yarn build && cp now.json public/ && cd public && now alias $(now) petecorreia.com",
		"dry": "yarn build && cp now.json public/ && cd public && now",
		"fix-semi": "eslint --quiet --ignore-pattern node_modules --ignore-pattern public --parser babel-eslint --no-eslintrc --rule '{\"semi\": [2, \"never\"], \"no-extra-semi\": [2]}' --fix gatsby-node.js"
	}
}
